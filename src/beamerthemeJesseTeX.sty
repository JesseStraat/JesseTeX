% Makes \pause work in align environment
\makeatletter
\renewrobustcmd{\beamer@@pause}[1][]{%
	\unless\ifmeasuring@%
	\ifblank{#1}%
	{\stepcounter{beamerpauses}}%
	{\setcounter{beamerpauses}{#1}}%
	\onslide<\value{beamerpauses}->\relax%
	\fi%
}
