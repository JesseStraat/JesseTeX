\useinnertheme{rectangles}
% Outer theme modifications
\setbeamertemplate{mini frames}[box]
\defbeamertemplate*{footline}{JesseTeX theme}
{%
	\pgfdeclarehorizontalshading{aes@progressbar}{2ex}{%
		color(0ex)=(stylecolour);%
		color(0.3in)=(white)%
	}%
